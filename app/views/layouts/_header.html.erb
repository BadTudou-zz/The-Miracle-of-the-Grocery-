<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #F1F1F1; border: none;">
<a class="navbar-brand col-lg-2" href="/">
<span><img src="../../images/logo.ico" style="width: 48px;"></span>&nbsp;&nbsp;解忧杂货店</a>
<% if logged_in? %>
  	<form class="form-inline navbar-form pull-left">
    	<input class="form-control " type="text" placeholder="Search">
    	<button class="btn btn-success-outline" type="submit">Search</button>
  	</form>
<% end %>
<div class="container">
 	<nav>
 		<ul class="nav navbar-nav navbar-right">
 			<% if logged_in? %>
 			<li class="nav-item dropdown">
 				<a href="#" class=" dropdown-toggle" data-toggle="dropdown"   aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i>
 				<%= current_guest.name %> 
 				<b class="caret"></b>
 				</a>
 				<ul class="dropdown-menu">
 					<li><%= link_to "个人", current_guest %></li>
 					<li><%= link_to "设置", '#' %></li>
 					<li class="divider"></li>
 					<li>
  						<%= link_to "退出", logout_path, method: "delete" %>
 					</li>
 				</ul>
 			</li>
  			<% else %>
  			<li><%= link_to "Log in", login_path %></li>
  			<% end %>
 		</ul>
 	</nav>
</div>
</header>
<script src="//cdn.bootcss.com/tether/1.4.0/js/tether.min.js"></script>
<script type="text/javascript" src="//cdn.bootcss.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js"></script>
