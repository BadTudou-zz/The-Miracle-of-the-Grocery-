<h1>Listing leeters</h1>
<%= will_paginate @letters,renderer: BootstrapPagination::Rails %>
<table>
  <tr>
    <th>Sender</th>
    <th>Receiver</th>
    <th>Content</th>
  </tr>
  <ul>
  <% @letters.each do |letter| %>
    <tr>
      <td><%= letter.sender %></td>
      <td><%= letter.receiver %></td>
      <td><%= letter.content %></td>
      <td><%= link_to 'Show', letter_path(letter) %></td>
      <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
      <td><%= link_to 'Del',  letter_path(letter),
              method: :delete,
              data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New letter', new_letter_path %>

