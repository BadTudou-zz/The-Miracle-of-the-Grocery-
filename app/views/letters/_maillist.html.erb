<div id="maillist">
	<div class="col-lg-3" style="margin-bottom: 5px;">
		<div class="btn-group">
  			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-square-o" aria-hidden="true"></i>&nbsp;&nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i>
  			</button>
 			<ul class="dropdown-menu">
 				<li><a class="dropdown-item" href="#"><i class="fa fa-list" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;全部</a></li>
    			<li><a class="dropdown-item" href="#"><i class="fa fa-envelope-open" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;已读</a></li>
    			<li><a class="dropdown-item" href="#"><i class="fa fa-envelope-open-o" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;未读</a></li>
 			</ul>
		</div>
		<button type="button" class="btn btn-default">&nbsp;&nbsp;<i class="fa fa-refresh" aria-hidden="true">&nbsp;&nbsp;</i>
		</button>
	</div>
	<div class="col-lg-offset-5 col-lg-4" style="font-size: 120%;">
		第1-50封，共100封
		<button type="button" class="btn btn-secondary btn-sm"><i class="fa fa-chevron-left" aria-hidden="true"></i></button>
		<button type="button" class="btn btn-secondary btn-sm"><i class="fa fa-chevron-right" aria-hidden="true"></i></button>
		<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cog" aria-hidden="true"></i>&nbsp;&nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i></button>
		<ul class="dropdown-menu pull-right">
 			<li><a class="dropdown-item" href="#"><i class="fa fa-list" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;标准</a></li>
    		<li><a class="dropdown-item" href="#"><i class="fa fa-envelope-open" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;适中</a></li>
    		<li><a class="dropdown-item" href="#"><i class="fa fa-envelope-open-o" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;紧凑</a></li>
 		</ul>
	</div>
	<div class="col-lg-12">
		<ul class="nav nav-tabs" role="tablist">
			<li class="nav-item active">
    			<a class="nav-link" href="#receive" role="tab" data-toggle="tab"><i class="fa fa-paper-plane" aria-hidden="true">收信箱</i></a>
  			</li>

  			<li class="nav-item">
    			<a class="nav-link" href="#send" role="tab" data-toggle="tab"><i class="fa fa-paper-plane-o" aria-hidden="true"></i>寄信箱</a>
  			</li>
  			
  			<li class="nav-item">
    			<a class="nav-link" href="#messages" role="tab" data-toggle="tab"><i class="fa fa-history" aria-hidden="true">草稿</i></a>
  			</li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane active" id="receive">
  				<ul class="list-group">
					<% @guest_letters_receive.each do |letter| %>
  					<li class="list-group-item" style="height:40px;">
  						<span class="col-lg-2 label label-default label-pill pull-right"><%= letter.created_at %></span>
  						<div class="col-lg-1"><i class="fa fa-square-o" aria-hidden="true"></i></div>
  						<div class="col-lg-2"><%= getGuestNameById(letter.sender) %></div>
  						<div class="col-lg-7"><%= link_to letter.content.slice(0, 20), letter_path(letter) %></div>
  				
    				</li>
  					<% end %>
				</ul>
  			</div>

  			<div role="tabpanel" class="tab-pane" id="send">
  				<ul class="list-group">
					<% @guest_letters_send.each do |letter| %>
  					<li class="list-group-item" style="height:40px;">
  						<span class="col-lg-2 label label-default label-pill pull-right"><%= letter.created_at %></span>
  						<div class="col-lg-1"><i class="fa fa-square-o" aria-hidden="true"></i></div>
  						<div class="col-lg-2"><%= getGuestNameById(letter.receiver) %></div>
  						<div class="col-lg-7"><%= link_to letter.content.slice(0, 20), letter_path(letter) %></div>
  				
    				</li>
  					<% end %>
				  </ul>
  			</div>

  			<div role="tabpanel" class="tab-pane" id="messages">草稿</div>
		</div>
		
	</div>
  
</div>