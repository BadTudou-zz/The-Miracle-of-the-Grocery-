<%= csrf_meta_tags %>
<%= stylesheet_link_tag "letters.css" %>
<div id="letter" class="container col-lg-offset-2 col-lg-8" style="background-color: #FFF;">
	<div id="top" style="height: 80px;">
		<div id="header" style="height: 20px; background-color: #FF005B">
			<div id="horizontal" class="col-lg-offset-1" style="color: #00ADF8">
			</div>
			
			<div id="vertical" class="col-lg-offset-1" style="width: 10px; height: 80px; background-color:#00ADF8; float: left">	
			</div>
			
			<div id="mark" class="col-lg-offset-1" style="padding-top:40px; padding-left: 20px; font-size: 200%; color: #00ADF8">
				解忧杂货店
			</div>
		</div>
	</div>

	<div id="middle" class="col-lg-offset-1" style="height: 550px; margin-top: 30px;">
		<form action="../letters/" method="post" name="letter">
			<input name="authenticity_token" type="hidden" value="x37DrAAwyIIb7s+w2+AdoCR8cAJIpQhIetKRrPgG5VA=">
			<div id="receiver">
				<i class="fa fa-2x fa-user" aria-hidden="true" style="color: #00ADF8; font-weight: bold;">&nbsp;&nbsp;</i>
				<input type="text" name="receiver" class="stationery" placeholder="收信人">
			</div>
			<div id="content" style="margin-top: 10px;">
				<textarea name="content" style="width:100%; height: 380px; text-indent:2em; overflow-y:scroll; scrollbar-base-color: #2AAA96" class="stationery" placeholder="正文"></textarea>
			</div>
			<div id="inscribe" style="float: right;">
				<div id="sender">
					<i class="fa fa-2x fa-address-card-o" aria-hidden="true" style="color: #00ADF8; font-weight: bold;">&nbsp;&nbsp;</i>
					<input type="text" name="sender" class="stationery" placeholder="署名">
				</div>
				<div id="senderdate">
					<i class="fa fa-2x fa-calendar" aria-hidden="true" style="color: #00ADF8; font-weight: bold;">&nbsp;&nbsp;&nbsp;</i>
					<input type="text" name="created_at" class="stationery" placeholder="日期">
				</div>
				<div id="action" style="margin-top: 5px; margin-left: 20px;">
					<button type="button" class="btn btn-link">保存草稿</button>
					<button type="submit button" class="btn btn-primary" style="background-color:#10C8DD; margin-left:5px; border: none; font-size: 16px;"><i class="fa fa-1x fa-paper-plane" aria-hidden="true"></i>&nbsp;&nbsp;发送</button>
				</div>
			</div>
			
		</form>
	</div>

	<div id="bottom" style="height: 30px; background-color: #00ADF8">
		
	</div>
</div>