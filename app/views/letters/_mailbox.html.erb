<div id="mailbox">
	<div class="col-lg-12">
		<button type="button" class="btn btn-primary  col-lg-10" data-toggle="modal" data-target="#myModal" style="background-color:#D84A38; border: none;">写信</button>
		
	<!-- Modal -->
		<div class="modal col-lg-offset-3 col-lg-8" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-header">
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:#FFF;">
          			<span aria-hidden="true">&times;</span>
          			<span class="sr-only">Close</span>
        		</button>
        	</div>
			<iframe src="/letters/new" style="width: 100%; height: 90%;"></iframe>
		</div>
	</div>
	<div class="list-group col-lg-offset-1 col-lg-9" style="margin-top: 10px;">
		<ul class="nav nav-tabs" role="tablist">
			<li class="nav-item active">
    			<a class="nav-link" href="#receive" role="tab" data-toggle="tab">收信箱&nbsp;&nbsp;(<%= @guest_letters_receive.count %>)</i></a>
  			</li>
  			<li class="nav-item">
    			<a class="nav-link active" href="#send" role="tab" data-toggle="tab">寄信箱&nbsp;&nbsp;(<%= @guest_letters_send.count %>)</a>
  			</li>
  			<li class="nav-item">
    			<a class="nav-link" href="#messages" role="tab" data-toggle="tab"><i class="fa fa-history" aria-hidden="true">草稿</i></a>
  			</li>
		</ul>
	</div>
	
	
	
</div>